/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.icon{
  width: 220rpx;
  height: 220rpx;
  object-fit: cover;
  border-radius: 20px; 
  margin: 30rpx;
}

.detail{
  width: 90%;
  display: flex;
  flex-direction: column;
}

.bar{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}

.box{
  width: 33.3%;
  text-align: center;
  font-size: 18px;
  font-family: "Georgia", serif;
  color: #4A90E2;
}

.region{
  text-align: center;
  font-size: 25px;
  font-family: "Georgia", serif;
  color: #4A90E2;
}

.temp{
  text-align: center;
  font-size: 25px;
  font-family: "Georgia", serif;
  color: #4A90E2;
}