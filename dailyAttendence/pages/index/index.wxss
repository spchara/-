/* 顶部导航栏 */
.top-nav {
  position:absolute;
  top: 0;
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
  font-size: 16px;
  width:95%;
  margin-top: 10rpx;
  z-index: 10; 
}

.nav-prev {
  color: #666;
}

.nav-next {
  color: #666;
}

.nav-title {
  font-weight: bold;
  color: #000;
}

/* 中间的图标按钮区域 */
/* pages/index/index.wxss */
.item-area {
  display: flex;
  flex-direction: column; /* 纵向排列 */
  align-items: flex-start; /* 子元素居左对齐 */
  width: 100%; /* 占据全宽 */
  padding: 0; /* 移除内边距 */
  margin: 0; /* 移除外边距 */
  
}


.btn-time {
  padding: 10rpx;
  margin: 0 0 20rpx 0;
  display:block;
  background-color: red;
  border: none;
  width: 100%;

}

.item-bar {
  display: flex;
  flex-direction: column;
  width: 100%;
}




.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 60px;
  height: 60px;
  margin-bottom: 5px;
}

.icon-text {
  font-size: 14px;
  color: #333;
}

.icon-subtext {
  font-size: 12px;
  color: #999;
}






.content {
  padding: 20rpx;
  background-color: #f0f0f0;
  border: 1px solid #ccc;
}