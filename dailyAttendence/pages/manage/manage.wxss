/* pages/manage/manage.wxss */

.block-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  background-color: #f9f9f9;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  margin: 10px 10px; /* 调整左右的外边距，保证两边留空 */
}


.left-section {
  display: flex;
  align-items: center;
}

.icon {
  width: 40px;
  height: 40px;
  margin-right: 10px;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.right-section {
  display: flex;
  flex-direction: column;
  align-items: flex-end; /* 右对齐 */
}

.days {
  font-size: 18px;
  font-weight: bold;
}

.subtext {
  font-size: 12px;
  color: #999;
}


.button-row {
  display: flex;           /* 使用 flex 布局 */
  justify-content: flex-start;  /* 按钮之间均匀分布，或改为 'center' 居中 */
  padding: 10px;           /* 行的内边距 */

}

.custom-block {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;      /* 垂直居中 */
  padding: 15px 20px;       /* 内边距 */
  background-color: #f9f9f9; /* 背景颜色 */
  border-radius: 10px;      /* 圆角 */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  margin: 10px 10px;           /* 外边距 */
}

.block-text {
  color: #666;              /* 文字颜色 */
  font-size: 16px;          /* 文字大小 */
}
